<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <context:component-scan base-package="com.capgemini.archaius.example"/>

    <!-- Config loading via Spring-Archaius-->
    <!--<bean class="com.capgemini.archaius.example.ArchaiusPropertyPlaceholderConfigurer">-->
    <bean class="com.capgemini.archaius.example.ArchaiusBridgePropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:/META-INF/system.properties</value>
                <value>classpath:/META-INF/even-more-system.properties</value>
            </list>
        </property>
        <!--<property name="location" value="classpath:/META-INF/system.properties" />-->
    </bean>

    <bean id="bean1" class="com.capgemini.archaius.example.Bean1"/>
    <bean id="runner" class="com.capgemini.archaius.example.Runner"/>

</beans>
